<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shanzhaozhen.authorize.mapper.OAuth2RedirectUriMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.shanzhaozhen.authorize.pojo.dto.OAuth2RedirectUriDTO">
        <id column="id" property="id" />
        <result column="registered_client_id" property="registeredClientId" />
        <result column="redirect_uri" property="redirectUri" />
        <result column="created_by" property="createdBy" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_by" property="lastModifiedBy" />
        <result column="last_modified_date" property="lastModifiedDate" />
    </resultMap>

    <select id="getOAuth2RedirectUrisByRegisteredClientId" resultType="org.shanzhaozhen.authorize.pojo.dto.OAuth2RedirectUriDTO">
        select id, clientId, redirect_uri,
               created_by, created_date, last_modified_by, last_modified_date
        from oauth2_redirect_uri
        where registered_client_id = #{registeredClientId}
    </select>

    <delete id="deleteOAuth2RedirectUrisByRegisteredClientId">
        delete from oauth2_redirect_uri where registered_client_id = #{registeredClientId}
    </delete>

</mapper>
